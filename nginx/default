server {
    # Azure akan mengisi port yang benar secara otomatis, 8080 adalah defaultnya
    listen 8080;
    listen [::]:8080;

    # Ini adalah Document Root yang sudah kita atur
    root /home/site/wwwroot/public;
    index index.php;

    # Mengizinkan file upload yang lebih besar (opsional, tapi bagus)
    client_max_body_size 100M;

    # Aturan URL Rewriting PENTING untuk Laravel
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Aturan untuk memproses file PHP menggunakan PHP-FPM
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        # Socket PHP-FPM ini dikelola oleh Azure, jangan diubah
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
    }

    # Blokir akses ke file .htaccess karena tidak digunakan oleh Nginx
    location ~ /\.ht {
        deny all;
    }
}